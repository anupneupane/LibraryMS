@page "/add-book"

@inherits AddBookBase.AddBookBase
@inject NavigationManager NavigationManager


<div class="container-fluid">
    <div class="row">

        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" width="80" height="80" class="d-inline-block align-top" alt="">
                Library MS Project Group 8
            </a>
        </nav>
    </div>
</div>
<!-- Side navigation -->
<div class="sidenav">
    <a href="/">Login Page</a>
    <a href="/books">Books</a>
    <a href="/add-book">Add New Book</a>
</div>


<div class="container" style="width:50%">
    <div class="row g-3">
        <div class="col-md-6"><h3>Add Book to the Library</h3>
            <label class="form-label">Book ID:</label>
            <input type="number" name="bookId" class="form-control" @bind=Book.Id />
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Book Title:</label>
            <input type="text" name="bookTitle" class="form-control" @bind=Book.Title />
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">
                Book Description:
            </label>
            <input type="text" name="bookDesc" class="form-control" @bind=Book.Description />
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Book Image URL</label>
            <input type="text" name="bookImage" class="form-control" @bind=Book.BookImage />
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-6">
            <button type="button" class="btn btn-primary" @onclick="() => submitFields()">Add</button>
        </div>
    </div>

</div>

@code {
    private void submitFields()
    {
        SaveBook();
        NavigationManager.NavigateTo("/books");
    }
}